<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Splash theme. -->
    <style name="Theme.Debuggy.SplashTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:statusBarColor">@android:color/system_neutral1_50</item>
        <item name="android:navigationBarColor" tools:targetApi="l">
            @android:color/system_neutral1_50
        </item>
        <item name="colorPrimary">@android:color/system_accent1_600</item>

        <item name="android:windowSplashScreenBackground" tools:targetApi="s">
            @android:color/system_neutral1_50
        </item>
        <item name="android:windowSplashScreenAnimationDuration">1000</item>
        <item name="android:windowSplashScreenAnimatedIcon" tools:targetApi="s">
            @drawable/anim_splash_debuggy
        </item>
        <item name="android:windowSplashScreenIconBackgroundColor">#FFF</item>
    </style>

    <!-- Base application theme. -->
    <style name="Theme.Debuggy.Base.Monet" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@android:color/system_accent1_600</item>
        <item name="colorPrimaryVariant">@android:color/system_accent2_800</item>
        <item name="colorOnPrimary">@android:color/system_neutral1_50</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@android:color/system_accent3_600</item>
        <item name="colorSecondaryVariant">@android:color/system_accent3_800</item>
        <item name="colorOnSecondary">@android:color/system_neutral1_50</item>
        <!-- Customize your theme here. -->
        <item name="android:colorBackground">@android:color/system_neutral1_50</item>
        <item name="colorSurface">@android:color/system_accent1_10</item>
        <item name="colorError">@color/red_700</item>
        <item name="colorOnBackground">@android:color/system_neutral1_900</item>
        <item name="colorOnSurface">@android:color/system_neutral1_900</item>
        <item name="colorOnError">@android:color/system_neutral1_900</item>
        <item name="android:textColorPrimary">@android:color/system_neutral1_900</item>
        <item name="android:textColorSecondary">@android:color/system_neutral2_700</item>
        <!--Material type attributes-->
        <item name="textAppearanceHeadline1">@style/TextAppearance.Debuggy.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.Debuggy.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.Debuggy.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.Debuggy.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.Debuggy.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.Debuggy.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.Debuggy.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.Debuggy.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.Debuggy.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.Debuggy.Body2</item>
        <item name="textAppearanceButton">@style/TextAppearance.Debuggy.Button</item>
        <item name="textAppearanceCaption">@style/TextAppearance.Debuggy.Caption</item>
        <item name="textAppearanceOverline">@style/TextAppearance.Debuggy.Overline</item>
        <!--Material shape attributes-->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.Debuggy.SmallComponent
        </item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.Debuggy.MediumComponent
        </item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.Debuggy.LargeComponent
        </item>
        <!--Fix issue with scrollbars in jetpack navigation-->
        <item name="android:scrollbars">none</item>
        <item name="preferenceTheme">@style/Debuggy.PreferenceThemeOverlay</item>
        <item name="android:outlineAmbientShadowColor">@android:color/transparent</item>
        <item name="android:outlineSpotShadowColor">@android:color/transparent</item>
    </style>

    <style name="Theme.Debuggy.App.Monet" parent="Theme.Debuggy.Base.Monet">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        <item name="android:navigationBarColor" tools:targetApi="l">
            @android:color/transparent
        </item>
    </style>
</resources>